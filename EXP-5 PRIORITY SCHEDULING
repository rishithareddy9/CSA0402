#include <stdio.h>

int main()
{
    int n, i, j;
    int burst[10], priority[10], pid[10];
    int waiting[10], turnaround[10];
    int total_waiting = 0, total_turnaround = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    printf("Enter burst time and priority for each process:\n");
    for (i = 0; i < n; i++)
    {
        pid[i] = i + 1;
        printf("P%d Burst Time: ", pid[i]);
        scanf("%d", &burst[i]);
        printf("P%d Priority: ", pid[i]);
        scanf("%d", &priority[i]);
    }

    // Sort processes based on priority
    for (i = 0; i < n - 1; i++)
    {
        for (j = i + 1; j < n; j++)
        {
            if (priority[i] > priority[j])
            {
                int temp;

                temp = priority[i];
                priority[i] = priority[j];
                priority[j] = temp;

                temp = burst[i];
                burst[i] = burst[j];
                burst[j] = temp;

                temp = pid[i];
                pid[i] = pid[j];
                pid[j] = temp;
            }
        }
    }

    // Waiting time calculation
    waiting[0] = 0;
    for (i = 1; i < n; i++)
    {
        waiting[i] = waiting[i - 1] + burst[i - 1];
    }

    // Turnaround time calculation
    for (i = 0; i < n; i++)
    {
        turnaround[i] = waiting[i] + burst[i];
    }

    // Display results
    printf("\nProcess\tPriority\tBurst Time\tWaiting Time\tTurnaround Time\n");
    for (i = 0; i < n; i++)
    {
        printf("P%d\t\t%d\t\t%d\t\t%d\t\t%d\n",
               pid[i], priority[i], burst[i], waiting[i], turnaround[i]);

        total_waiting += waiting[i];
        total_turnaround += turnaround[i];
    }

    printf("\nAverage Waiting Time = %.2f",
           (float)total_waiting / n);
    printf("\nAverage Turnaround Time = %.2f\n",
           (float)total_turnaround / n);

    return 0;
}
OUTPUT 
Enter number of processes: 3
Enter burst time and priority for each process:
P1 Burst Time: 5
P1 Priority: 2
P2 Burst Time: 3
P2 Priority: 1
P3 Burst Time: 8
P3 Priority: 3
