#include <stdio.h>

int main()
{
    int n, i, j;
    int burst[10], pid[10];
    int waiting[10], turnaround[10];
    int total_waiting = 0, total_turnaround = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    printf("Enter burst time for each process:\n");
    for (i = 0; i < n; i++)
    {
        pid[i] = i + 1;
        printf("P%d: ", pid[i]);
        scanf("%d", &burst[i]);
    }

    // Sort processes based on burst time (SJF)
    for (i = 0; i < n - 1; i++)
    {
        for (j = i + 1; j < n; j++)
        {
            if (burst[i] > burst[j])
            {
                int temp = burst[i];
                burst[i] = burst[j];
                burst[j] = temp;

                temp = pid[i];
                pid[i] = pid[j];
                pid[j] = temp;
            }
        }
    }

    // Waiting time calculation
    waiting[0] = 0;
    for (i = 1; i < n; i++)
    {
        waiting[i] = waiting[i - 1] + burst[i - 1];
    }

    // Turnaround time calculation
    for (i = 0; i < n; i++)
    {
        turnaround[i] = waiting[i] + burst[i];
    }

    // Display results
    printf("\nProcess\tBurst Time\tWaiting Time\tTurnaround Time\n");
    for (i = 0; i < n; i++)
    {
        printf("P%d\t\t%d\t\t%d\t\t%d\n",
               pid[i], burst[i], waiting[i], turnaround[i]);

        total_waiting += waiting[i];
        total_turnaround += turnaround[i];
    }

    printf("\nAverage Waiting Time = %.2f",
           (float)total_waiting / n);
    printf("\nAverage Turnaround Time = %.2f\n",
           (float)total_turnaround / n);

    return 0;
}

OUTPUT
Process  Burst Time  Waiting Time  Turnaround Time
P1           6           0               6
P3           7           6               13
P2           8           13              21

Average Waiting Time = 6.33
Average Turnaround Time = 13.33
