#include <stdio.h>

int main() {
    int p = 5, r = 3;
    int alloc[5][3] = {{0,1,0},{2,0,0},{3,0,2},{2,1,1},{0,0,2}};
    int max[5][3]   = {{7,5,3},{3,2,2},{9,0,2},{2,2,2},{4,3,3}};
    int avail[3] = {3,3,2};

    int finish[5]={0}, safe[5], count=0;
    int need[5][3], i,j;

    for(i=0;i<p;i++)
        for(j=0;j<r;j++)
            need[i][j]=max[i][j]-alloc[i][j];

    while(count<p) {
        for(i=0;i<p;i++) {
            if(!finish[i]) {
                int can=1;
                for(j=0;j<r;j++)
                    if(need[i][j]>avail[j]) can=0;

                if(can) {
                    for(j=0;j<r;j++)
                        avail[j]+=alloc[i][j];
                    safe[count++]=i;
                    finish[i]=1;
                }
            }
        }
    }

    printf("Safe Sequence: ");
    for(i=0;i<p;i++)
        printf("P%d ", safe[i]);

    return 0;
}

OUTPUT
Safe Sequence: P1 P3 P4 P0 P2
