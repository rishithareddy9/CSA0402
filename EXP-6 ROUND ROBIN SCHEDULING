#include <stdio.h>

int main() {
    int n, tq, i, time = 0, remaining;
    int bt[10], rt[10];

    printf("Enter number of processes: ");
    scanf("%d", &n);

    remaining = n;

    for(i = 0; i < n; i++) {
        printf("Enter burst time of P%d: ", i+1);
        scanf("%d", &bt[i]);
        rt[i] = bt[i];
    }

    printf("Enter time quantum: ");
    scanf("%d", &tq);

    while(remaining != 0) {
        for(i = 0; i < n; i++) {
            if(rt[i] > 0) {
                if(rt[i] > tq) {
                    time += tq;
                    rt[i] -= tq;
                } else {
                    time += rt[i];
                    printf("Process P%d completed at time %d\n", i+1, time);
                    rt[i] = 0;
                    remaining--;
                }
            }
        }
    }
    return 0;
}
OUTPUT
Process P1 completed at time 7
Process P2 completed at time 10
Process P3 completed at time 12
